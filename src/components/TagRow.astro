---
const { tags } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---
<p class="tag-row" aria-label="Bean tags">
  [
  {tags.map((tag, index) => (
    <Fragment>
      <a class="tag-link" href={`${baseUrl}tags/${tag}/`}>{tag}</a>
      {index < tags.length - 1 && " Â· "}
    </Fragment>
  ))}
  ]
</p>
